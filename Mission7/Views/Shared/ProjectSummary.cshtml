@{
}
@model Book
<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h4>@Model.Title</h4>

        <span class="badge bg-info" style="float:right">
            Book Classification: @Model.Classification
        </span>
    </div>

    <ul>

        @*<li>Book Title: @b.Title</li>*@
        <li>Book Author: @Model.Author</li>
        <li>Book Publisher: @Model.Publisher</li>
        <li>Book ISBN: @Model.Isbn</li>
        @*<li>Book Classification: @b.Classification</li>*@
        <li>Book Category: @Model.Category</li>
        <li>Book Page Count: @Model.PageCount</li>
        <li>Book Price: @Model.Price</li>
    </ul>

    <form method="post" asp-page="/Donate">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />


        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>

    </form>

</div>

